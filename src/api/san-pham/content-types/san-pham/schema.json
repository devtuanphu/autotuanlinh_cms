{
  "kind": "collectionType",
  "collectionName": "san_phams",
  "info": {
    "singularName": "san-pham",
    "pluralName": "san-phams",
    "displayName": "Sản phẩm",
    "description": "Collection type để quản lý sản phẩm"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "seo": {
      "type": "component",
      "component": "shared.seo",
      "repeatable": false,
      "required": true
    },
    "title": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": false
    },
    "moTaNgan": {
      "type": "text",
      "required": false
    },
    "anhSanPham": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "giaGoc": {
      "type": "decimal",
      "required": false,
      "min": 0
    },
    "giaBan": {
      "type": "decimal",
      "required": false,
      "min": 0
    },
    "thongSo": {
      "type": "component",
      "component": "shared.specification",
      "repeatable": true,
      "required": false
    },
    "badges": {
      "type": "enumeration",
      "required": false,
      "enum": [
        "Bán chạy",
        "Hot",
        "Mới"
      ]
    },
    "giamGia": {
      "type": "integer",
      "required": false,
      "min": 0,
      "max": 100
    },
    "reviews": {
      "type": "component",
      "component": "shared.product-review",
      "repeatable": true,
      "required": false
    },
    "rating": {
      "type": "decimal",
      "required": false,
      "min": 0,
      "max": 5
    },
    "reviewCount": {
      "type": "integer",
      "required": false,
      "min": 0
    },
    "moTaChiTiet": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      }
    }
  }
}
